upstream app_server_darpan {
    server unix:/home/django/gunicorn-darpan.socket fail_timeout=0;
}


server {
    if ($host = www.darpandeva.com.br) {
        return 301 https://darpandeva.com/pt-br$request_uri;
    }


    if ($host = darpandeva.com.br) {
        return 301 https://darpandeva.com/pt-br$request_uri;
    }


    server_name  darpandeva.com;
    root /usr/share/nginx/html;
    index index.html index.htm;

    client_max_body_size 4G;

    keepalive_timeout 5;

    # Your Django project's media files - amend as required
    location /media  {
        alias /home/django/darpandeva.com/darpan/media;
    }

    # your Django project's static files - amend as required
    location /static {
        alias /home/django/darpandeva.com/darpan/staticfiles;
    }
    
    location = /favicon.ico {
        alias /home/django/darpandeva.com/darpan/staticfiles/images/favicon.ico;
    }


    location / {
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header Host $host;
            proxy_redirect off;
            proxy_buffering off;

            proxy_pass http://app_server_darpan;
    }


    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/darpandeva.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/darpandeva.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}


server {
    if ($host = www.darpandeva.com) {
        return 301 https://darpandeva.com$request_uri;
    } # managed by Certbot

    if ($host = darpandeva.com) {
        return 301 https://darpandeva.com$request_uri;
    } # managed by Certbot
    
    if ($host = www.darpandeva.com.br) {
        return 301 https://darpandeva.com/pt-br$request_uri;
    } # managed by Certbot

    if ($host = darpandeva.com.br) {
        return 301 https://darpandeva.com/pt-br$request_uri;
    } # managed by Certbot


    listen 80 default_server;
    listen [::]:80 default_server ipv6only=on;
    
    server_name   darpandeva.com  ;
    return 404; # managed by Certbot

}
